@using DoList.Models.ViewModels
@model RegistroVM
@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@if (!string.IsNullOrEmpty(Model.MensajeError))
{
    <div class="alert alert-danger">
        @Model.MensajeError
    </div>
}


<form id="register-form" asp-controller="Login" asp-action="Registrar" method="post" role="form">
    <div class="form-group">
        <input type="text"  id="username" tabindex="1" class="form-control" placeholder="Usuario" asp-for="Usuario.Nombre">
        <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="password" id="password" tabindex="2" class="form-control" placeholder="Contraseña" asp-for="Usuario.Password">
        <span asp-validation-for="Usuario.Password" class="text-danger"></span>

    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Crear cuenta">
            </div>
        </div>
    </div>
</form>

